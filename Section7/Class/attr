
class customer:
    def __init__(self, name, order):
        self.name = name
        self.order = order





if __name__ == "__main__":
    customer1 = customer("peter", "pizza")
    print("order before change: ", customer1.order)
    customer1.order = "ice-cream"
    print("order after change: ", customer1.order)
    customer1.order = 10000
    print("order after change in a bad way: ", customer1.order)

